  <style>
    :root{
      --aimup-green:#23a86b;
      --aimup-green-dark:#0e4d3a;     /* verde escuro (msg de outros) */
      --mine-bg:#e8f7ee;
      --mine-fg:#0f5132;
      --other-bg:var(--aimup-green-dark);
      --other-fg:#ffffff;
    }

    body{
      background:linear-gradient(0deg,#6fbb96 0%,#23a86b 100%);
      font-family:'Segoe UI',sans-serif;color:#fff;min-height:100vh
    }
    .card{
      background-color:rgba(255,255,255,.12);
      border:none;border-radius:20px;backdrop-filter:blur(5px);color:#fff
    }

    .chat-box{height:70vh;overflow-y:auto}
    .avatar{width:36px;height:36px;border-radius:50%;object-fit:cover;border:2px solid #fff}

    /* FILEIRAS */
    .row-mine, .row-other{
      display:flex;
      align-items:flex-start;
      margin-bottom:.5rem;
    }
    .row-mine{ justify-content:flex-end; }
    .row-other{ justify-content:flex-start; }

    /* BOLHAS: ocupam METade do chat (ajuste aqui!) e quebram linhas */
    .bubble{
      display:block;                 /* evita shrink-to-fit do inline-block */
      width:50%;                     /* <= AJUSTE AQUI a “metade” desejada */
      min-width:50%;                 /* trava p/ não encolher */
      max-width:50%;                 /* não ultrapassa metade */
      border-radius:16px;
      padding:8px 10px;
      line-height:1.22;
      overflow-wrap:anywhere;
      word-break:break-word;
      white-space:pre-wrap;          /* preserva "enter" do usuário */
      text-align:left;               /* conteúdo sempre alinhado à esquerda */
    }
    .row-mine  .bubble{ margin-left:auto;  } /* ancora à direita (expande p/ esquerda) */
    .row-other .bubble{ margin-right:auto; } /* ancora à esquerda (expande p/ direita) */

    .mine  { background:var(--mine-bg);  color:var(--mine-fg); }
    .other { background:var(--other-bg); color:var(--other-fg); }

    /* Espaçamento exato de 5px */
    .name{font-size:12px;font-weight:600;opacity:.95;margin:0 0 5px 0;}
    .msg {margin:0 0 5px 0;}
    .time{font-size:11px;opacity:.85;margin:0;}

    /* Mobile: deixa mais largo para leitura */
    @media (max-width:576px){
      .bubble{ width:80%; min-width:80%; max-width:80%; }
    }
