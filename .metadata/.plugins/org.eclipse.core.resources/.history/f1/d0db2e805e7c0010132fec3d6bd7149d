<!DOCTYPE html>
<html xmlns:th="http://www.thymeleaf.org" lang="pt-br">
<head>
  <meta charset="UTF-8">
  <title>Chat do Grupo</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" rel="stylesheet">

  <style>
    :root{
      --aimup-green:#23a86b;
      --aimup-green-dark:#0e4d3a;   /* verde escuro para mensagens de outros */
      --mine-bg:#e8f7ee;
      --mine-fg:#0f5132;
      --other-bg:var(--aimup-green-dark);
      --other-fg:#ffffff;
    }

    body{
      background:linear-gradient(0deg,#6fbb96 0%,#23a86b 100%);
      font-family:'Segoe UI',sans-serif;color:#fff;min-height:100vh
    }
    .card{
      background-color:rgba(255,255,255,.12);
      border:none;border-radius:20px;backdrop-filter:blur(5px);color:#fff
    }

    .chat-box{height:70vh;overflow-y:auto}
    .avatar{width:36px;height:36px;border-radius:50%;object-fit:cover;border:2px solid #fff}

    /* BOLHAS
       - ancoradas pela fileira (mine = direita; other = esquerda)
       - no máximo 50% da largura do chat
       - quebra linha automática e respeita "enter"
    */
    .bubble{
      display:inline-block;
      max-width:50%;
      border-radius:16px;
      padding:8px 10px;
      line-height:1.22;
      overflow-wrap:anywhere;
      word-break:break-word;
      white-space:pre-wrap;
    }
    .mine  { background:var(--mine-bg);  color:var(--mine-fg); }
    .other { background:var(--other-bg); color:var(--other-fg); }

    /* espaçamento EXATO: 5px entre nome, mensagem e horário */
    .name{font-size:12px;font-weight:600;opacity:.95;margin:0 0 5px 0;}
    .msg {margin:0 0 5px 0;}
    .time{font-size:11px;opacity:.85;margin:0;}

    /* fileiras (alinhamento e “expansão” visual da bolha) */
    .row-mine  { display:flex; justify-content:flex-end; align-items:flex-start; }
    .row-other { display:flex; justify-content:flex-start; align-items:flex-start; }
    .row-mine  .bubble{ margin-left:auto; text-align:right; }  /* ancora à direita e “cresce” p/ a esquerda */
    .row-other .bubble{ margin-right:auto; }                   /* ancora à esquerda e “cresce” p/ a direita */

    /* mobile: dar mais respiro */
    @media (max-width:576px){
      .bubble{ max-width:80%; }
    }
  </style>
</head>
<body>
<div class="container py-4">
  <div class="d-flex justify-content-between align-items-center">
    <a class="btn btn-outline-light" th:href="@{/}">
      <i class="fa-solid fa-arrow-left"></i> Voltar
    </a>
    <h3 class="fw-bold mb-0" th:text="${grupo.nome}">Grupo</h3>
    <span class="badge bg-light text-dark" th:text="${qtdMembros + ' membros'}">0 membros</span>
  </div>

  <!-- mensagens -->
  <div id="chatBox" class="card p-3 mt-3 chat-box bg-white text-dark">
    <div th:if="${#lists.isEmpty(mensagens)}" class="text-muted">Sem mensagens ainda.</div>

    <div th:each="m : ${mensagens}">
      <!-- SUA mensagem (direita; expande p/ esquerda) -->
      <div class="row-mine mb-2" th:if="${m.autor.id == usuario.id}">
        <div class="me-2 text-end">
          <div class="bubble mine">
            <div class="name" th:text="${m.autor.nome}">Você</div>
            <div class="msg"  th:text="${m.conteudo}">conteúdo</div>
            <div class="time" th:text="${#temporals.format(m.criadaEm,'HH:mm')}">00:00</div>
          </div>
        </div>
        <img class="avatar"
             th:src="${(m.autor.fotoPerfil != null && !#strings.isEmpty(m.autor.fotoPerfil)) ? m.autor.fotoPerfil : '/img/LogoAimUp.png'}"
             alt="avatar">
      </div>

      <!-- OUTRA pessoa (esquerda; expande p/ direita) -->
      <div class="row-other mb-2" th:if="${m.autor.id != usuario.id}">
        <img class="avatar me-2"
             th:src="${(m.autor.fotoPerfil != null && !#strings.isEmpty(m.autor.fotoPerfil)) ? m.autor.fotoPerfil : '/img/LogoAimUp.png'}"
             alt="avatar">
        <div>
          <div class="bubble other">
            <div class="name" th:text="${m.autor.nome}">Nome</div>
            <div class="msg"  th:text="${m.conteudo}">conteúdo</div>
            <div class="time" th:text="${#temporals.format(m.criadaEm,'HH:mm')}">00:00</div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- enviar -->
  <form class="input-group mt-3" th:action="@{|/grupos/${grupo.id}/chat/enviar|}" method="post">
    <input type="hidden" th:name="${_csrf.parameterName}" th:value="${_csrf.token}" />
    <input id="chatInput" name="mensagem" type="text" class="form-control" placeholder="Mensagem..." required>
    <button class="btn btn-success" type="submit">Enviar</button>
  </form>
</div>

<script>
  // rola para o final ao carregar
  (function(){
    const box = document.getElementById('chatBox');
    if (box) box.scrollTop = box.scrollHeight;
  })();
</script>
