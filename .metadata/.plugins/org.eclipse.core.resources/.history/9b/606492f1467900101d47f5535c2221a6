  .profile-pic { width: 150px; height: 150px; object-fit: cover; border-radius: 50%; border: 3px solid #198754; }
  body { background-color: #198754; }
</style>

<body>

<nav class="navbar navbar-light px-3">
  <div class="container-fluid d-flex justify-content-between align-items-center">
    <a th:href="@{ / }" class="btn btn-outline-light">Voltar</a>
    <h5 class="mb-0">Perfil</h5>
  </div>
</nav>

<div class="container py-5">
  <div class="card text-center p-4">
    <!-- foto de perfil: usa a do usuário se houver, senão a logo -->
    <img class="profile-pic mx-auto"
         th:src="${usuario.fotoPerfil != null} ? ${usuario.fotoPerfil} : @{/img/LogoAimUp.png}"
         alt="Perfil">

    <h4 id="nomePerfil">
      <span th:text="${usuario.nome}">Usuário</span>
      <i class="bi bi-pencil-square text-primary" style="cursor:pointer;" onclick="editarNome()"></i>
    </h4>

    <p id="imcPerfil">
      IMC:
      <strong>
        <span th:text="${usuario.imc != null} ? ${#numbers.formatDecimal(usuario.imc,1,2)} : '0.00'">0.00</span>
      </strong>
      <i class="bi bi-pencil-square text-primary" style="cursor:pointer;" onclick="editarIMC()"></i>
    </p>

    <div class="d-grid gap-2 mt-3">
      <a th:href="@{/imc}" class="btn btn-success">Calcular IMC</a>
    </div>

    <div class="text-center mt-3">
      <i id="shareIcon" class="bi bi-share-fill text-info" style="font-size: 2rem; cursor:pointer;" onclick="compartilharPerfil()"></i>
    </div>
  </div>
</div>

<!-- (se quiser manter os mesmos scripts de edição no cliente, ok; eles só mudam o texto na tela) -->
<script>
let editandoCampo = "";

function compartilharPerfil() {
  if (navigator.share) {
    navigator.share({ title: 'Meu Perfil AIMUP', text: 'Confere meu progresso no AIMUP!', url: window.location.href });
  } else { alert('Compartilhamento não suportado.'); }
}

function editarNome() {
  editandoCampo = "nome";
  document.getElementById('modalTitulo')?.innerText = "Editar Nome";
}

function editarIMC() {
  editandoCampo = "imc";
  document.getElementById('modalTitulo')?.innerText = "Editar IMC";
}
</script>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
