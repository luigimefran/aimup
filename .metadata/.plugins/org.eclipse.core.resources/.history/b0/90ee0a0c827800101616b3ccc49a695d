<div class="container py-5">
  <div class="card text-center p-4">
    <img src="/img/perfil.jpg" class="profile-pic mx-auto" alt="Perfil">
    <h4 id="nomePerfil">
      Gabriel 
      <i class="bi bi-pencil-square text-primary" style="cursor:pointer;" onclick="editarNome()"></i>
    </h4>
    <p id="imcPerfil">
      IMC: 23.7 
      <i class="bi bi-pencil-square text-primary" style="cursor:pointer;" onclick="editarIMC()"></i>
    </p>

    <div class="d-grid gap-2 mt-3">
      <a href="/imc"><button class="btn btn-success">Calcular IMC</button></a>
    </div>

    <div class="text-center mt-3">
      <i id="shareIcon" class="bi bi-share-fill text-info" style="font-size: 2rem; cursor:pointer;" onclick="compartilharPerfil()"></i>
    </div>
  </div>
</div>

<div class="modal fade" id="editarModal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content bg-dark text-white">
      <div class="modal-header">
        <h5 id="modalTitulo">Editar</h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <input type="text" id="inputModal" class="form-control">
      </div>
      <div class="modal-footer">
        <button class="btn btn-success" onclick="salvarEdicao()">Salvar</button>
      </div>
    </div>
  </div>
</div>

<script>
let editandoCampo = "";

function compartilharPerfil() {
  if (navigator.share) {
    navigator.share({
      title: 'Meu Perfil AIMUP',
      text: 'Confere meu progresso no AIMUP!',
      url: window.location.href
    });
  } else {
    alert('Compartilhamento n√£o suportado.');
  }
}

function editarNome() {
  editandoCampo = "nome";
  document.getElementById('modalTitulo').innerText = "Editar Nome";
  document.getElementById('inputModal').value = document.getElementById('nomePerfil').innerText.trim();
  new bootstrap.Modal(document.getElementById('editarModal')).show();
}

function editarIMC() {
  editandoCampo = "imc";
  document.getElementById('modalTitulo').innerText = "Editar IMC";
  document.getElementById('inputModal').value = document.getElementById('imcPerfil').innerText.replace('IMC: ', '');
  new bootstrap.Modal(document.getElementById('editarModal')).show();
}

function salvarEdicao() {
  const valor = document.getElementById('inputModal').value;
  if (editandoCampo === "nome") {
    document.getElementById('nomePerfil').innerHTML = `${valor} <i class="bi bi-pencil-square text-primary" style="cursor:pointer;" onclick="editarNome()"></i>`;
  } else if (editandoCampo === "imc") {
    document.getElementById('imcPerfil').innerHTML = `IMC: ${valor} <i class="bi bi-pencil-square text-primary" style="cursor:pointer;" onclick="editarIMC()"></i>`;
  }
  bootstrap.Modal.getInstance(document.getElementById('editarModal')).hide();
}
</script>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
