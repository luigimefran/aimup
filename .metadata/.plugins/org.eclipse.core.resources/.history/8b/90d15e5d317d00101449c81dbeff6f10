  <!-- Vendor JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

  <!-- ====== HOME SCRIPT (tudo aqui para você customizar) ====== -->
  <script th:inline="javascript">
    // Toast automático (2s) com base em flash attributes
    document.addEventListener('DOMContentLoaded', function(){
      const ok   = /*[[${ok}]]*/ null;
      const erro = /*[[${erro}]]*/ null;
      const toastEl   = document.getElementById('autoToast');
      const toastBody = document.getElementById('toastBody');
      let msg = null;

      if (typeof ok === 'string')   msg = ok;
      if (typeof erro === 'string') msg = erro;

      if (msg) {
        toastBody.textContent = msg;
        const t = new bootstrap.Toast(toastEl, { delay: 2000 });
        t.show();
      }
    });

    // Exemplo: hook para estilizar progress-bar dinamicamente (opcional)
    (function(){
      const bars = document.querySelectorAll('.progress-bar');
      bars.forEach(b=>{
        const w = parseInt(b.style.width || '0');
        if (w >= 100) b.classList.add('bg-success');
      });
    })();
  </script>
