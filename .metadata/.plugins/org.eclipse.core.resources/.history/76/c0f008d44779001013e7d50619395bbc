<!-- menos “alto”: sem vh-100; só um padding vertical -->
<body class="d-flex justify-content-center py-4">
  <nav class="navbar navbar-light position-absolute top-0 start-0 m-3">
    <a th:href="@{/perfil}" class="btn btn-outline-light">Voltar</a>
  </nav>

  <div class="container">
    <!-- logo -->
    <img src="/img/LogoAimUp.png" alt="Logo AimUp" class="logo-aimup">
    <h1 class="text-center mb-3">Cálculo de IMC</h1>

    <!-- alertas -->
    <div th:if="${mensagem}" class="alert alert-success" th:text="${mensagem}"></div>
    <div th:if="${erro}" class="alert alert-danger" th:text="${erro}"></div>

    <!-- IMC atual salvo (0.00 se nunca calculou) -->
    <div class="text-center mb-3">
      <p class="mb-0">Seu IMC atual:</p>
      <h4><span th:text="${#numbers.formatDecimal(imcAtual,1,2)}">0.00</span></h4>
    </div>

    <!-- formulário: envia para /imc/calcular (com CSRF) -->
    <form id="formIMC" th:action="@{/imc/calcular}" method="post">
      <div class="mb-3">
        <label for="peso" class="form-label">Peso (kg)</label>
        <input type="number" class="form-control" id="peso" name="peso"
               placeholder="Insira seu peso em kg" step="0.01" min="1" required>
      </div>

      <div class="mb-3">
        <label for="alturaCm" class="form-label">Altura (cm)</label>
        <!-- campo visível em cm -->
        <input type="number" class="form-control" id="alturaCm"
               placeholder="Insira sua altura em cm" step="0.1" min="30" required>
        <!-- campo oculto em metros que será enviado ao backend -->
        <input type="hidden" id="altura" name="altura">
      </div>

      <div class="mb-3">
        <label class="form-label">Sexo</label>
        <div class="form-check">
          <input class="form-check-input" type="radio" name="sexo" id="masculino" value="masculino">
          <label class="form-check-label" for="masculino">Masculino</label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="radio" name="sexo" id="feminino" value="feminino" checked>
          <label class="form-check-label" for="feminino">Feminino</label>
        </div>
      </div>

      <!-- CSRF -->
      <input type="hidden" th:name="${_csrf.parameterName}" th:value="${_csrf.token}"/>

      <button type="submit" class="btn btn-custom w-100">Calcular e salvar</button>
    </form>

    <!-- resultado imediato no front (opcional) -->
    <div id="resultado" class="mt-3 text-center" style="display: none;">
      <h4 class="text-white">Seu IMC é: <span id="imcValue"></span></h4>
      <p id="resultadoCategoria" class="text-white"></p>
    </div>
  </div>

  <script>
    const form = document.getElementById("formIMC");
    const pesoEl = document.getElementById("peso");
    const alturaCmEl = document.getElementById("alturaCm");
    const alturaHiddenEl = document.getElementById("altura");

    const imcBox = document.getElementById("resultado");
    const imcValueEl = document.getElementById("imcValue");
    const categoriaEl = document.getElementById("resultadoCategoria");

    form.addEventListener("submit", function (event) {
      // converter cm -> m e injetar no campo oculto "altura" que o backend espera
      const peso = parseFloat(String(pesoEl.value).replace(",", "."));
      const alturaCm = parseFloat(String(alturaCmEl.value).replace(",", "."));
      if (isNaN(peso) || isNaN(alturaCm) || alturaCm <= 0) {
        event.preventDefault();
        alert("Por favor, insira valores válidos para peso e altura.");
        return;
      }
      const alturaM = alturaCm / 100.0;
      alturaHiddenEl.value = alturaM.toFixed(3); // envia em metros

      // (opcional) mostrar resultado imediato no front antes do submit completar
      const imc = peso / (alturaM * alturaM);
      imcValueEl.textContent = imc.toFixed(2);

      let categoria = "";
      if (imc < 18.5) categoria = "Abaixo do peso";
      else if (imc < 24.9) categoria = "Peso normal";
      else if (imc < 29.9) categoria = "Sobrepeso";
      else if (imc < 39.9) categoria = "Obesidade";
      else categoria = "Obesidade grave";

      categoriaEl.textContent = categoria;
      imcBox.style.display = "block";
      // Não cancela o submit: o backend salva e redireciona para /perfil
    });
  </script>
</body>
