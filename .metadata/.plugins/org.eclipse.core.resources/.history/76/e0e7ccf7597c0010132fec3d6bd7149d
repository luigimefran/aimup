      --other-bg:var(--aimup-green-dark);
      --other-fg:#ffffff;
    }

    body{
      background:linear-gradient(0deg,#6fbb96 0%,#23a86b 100%);
      font-family:'Segoe UI',sans-serif;color:#fff;min-height:100vh
