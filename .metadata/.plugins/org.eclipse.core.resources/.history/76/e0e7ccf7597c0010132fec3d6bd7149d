  <!-- mensagens -->
  <div id="chatBox" class="card p-3 mt-3 chat-box bg-white text-dark">
    <div th:if="${#lists.isEmpty(mensagens)}" class="text-muted">Sem mensagens ainda.</div>

    <div th:each="m : ${mensagens}">
      <!-- SUA mensagem (direita) -->
      <div class="d-flex mb-2" th:if="${m.autor.id == usuario.id}" style="justify-content:end;">
        <div class="me-2 text-end">
          <div class="bubble mine">
            <div class="name" th:text="${m.autor.nome}">Você</div>
            <div th:text="${m.conteudo}">conteúdo</div>
            <div class="time mt-1" th:text="${#temporals.format(m.criadaEm,'HH:mm')}">00:00</div>
          </div>
        </div>
        <img class="avatar"
             th:src="${(m.autor.fotoPerfil != null && !#strings.isEmpty(m.autor.fotoPerfil)) ? m.autor.fotoPerfil : '/img/LogoAimUp.png'}"
             alt="avatar">
      </div>

      <!-- OUTRA pessoa (esquerda) -->
      <div class="d-flex mb-2" th:if="${m.autor.id != usuario.id}">
        <img class="avatar me-2"
             th:src="${(m.autor.fotoPerfil != null && !#strings.isEmpty(m.autor.fotoPerfil)) ? m.autor.fotoPerfil : '/img/LogoAimUp.png'}"
             alt="avatar">
        <div>
          <div class="bubble other">
            <div class="name" th:text="${m.autor.nome}">Nome</div>
            <div th:text="${m.conteudo}">conteúdo</div>
            <div class="time mt-1" th:text="${#temporals.format(m.criadaEm,'HH:mm')}">00:00</div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- enviar -->
  <form class="input-group mt-3" th:action="@{|/grupos/${grupo.id}/chat/enviar|}" method="post">
    <input type="hidden" th:name="${_csrf.parameterName}" th:value="${_csrf.token}" />
    <input id="chatInput" name="mensagem" type="text" class="form-control" placeholder="Mensagem..." required>
    <button class="btn btn-success" type="submit">Enviar</button>
  </form>
</div>

<script>
  // rola para o final ao carregar
  (function(){
    const box = document.getElementById('chatBox');
    if (box) box.scrollTop = box.scrollHeight;
  })();
