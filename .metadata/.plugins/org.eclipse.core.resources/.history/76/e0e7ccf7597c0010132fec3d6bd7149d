    /* bolhas mais compridas + quebra automática de linha */
    .bubble{
      max-width: min(90%, 780px);      /* mais comprida, mas com limite máximo confortável */
      border-radius:16px;
      padding:10px 12px;
      line-height:1.35;
      overflow-wrap:anywhere;          /* quebra palavras muito longas */
      word-break:break-word;           /* fallback pra navegadores antigos */
      white-space:pre-wrap;            /* preserva \n do texto e faz wrap automático */
    }

    .mine  { background:var(--mine-bg);  color:var(--mine-fg); }
    .other { background:var(--other-bg); color:var(--other-fg); }

