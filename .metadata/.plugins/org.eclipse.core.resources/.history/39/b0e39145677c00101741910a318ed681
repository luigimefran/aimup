<body>
<div class="container py-4">
  <div class="d-flex justify-content-between align-items-center">
    <a class="btn btn-outline-light" href="/grupos"><i class="fa fa-arrow-left"></i> Meus Grupos</a>
    <h3 class="fw-bold">Criar Grupo</h3>
    <span></span>
  </div>

  <div class="card p-4 mt-3">
    <form th:action="@{/grupos/criar}" method="post" id="formCriar">
      <input type="hidden" th:name="${_csrf.parameterName}" th:value="${_csrf.token}" />

      <div th:if="${erro != null}" class="alert alert-danger" th:text="${erro}"></div>
      <div th:if="${ok != null}" class="alert alert-success" th:text="${ok}"></div>

      <div class="mb-3">
        <label class="form-label">Nome do grupo</label>
        <input type="text" name="nome" class="form-control" required>
      </div>

      <div class="row g-3">
        <div class="col-md-6">
          <label class="form-label">Meta do grupo (título)</label>
          <input type="text" name="metaTitulo" class="form-control" placeholder="Ex: 30 dias de hábitos saudáveis">
        </div>
        <div class="col-md-6">
          <label class="form-label">Descrição da meta</label>
          <input type="text" name="metaDescricao" class="form-control" placeholder="Ex: água, sono e exercícios">
        </div>
      </div>

      <hr class="border-light my-4"/>

      <h5 class="mb-3">Tarefas iniciais</h5>
      <div id="tarefasContainer"></div>
      <button type="button" class="btn btn-light text-success mt-2" onclick="addTarefa()">+ Adicionar tarefa</button>

      <div class="mt-4">
        <button class="btn btn-success">Criar grupo</button>
      </div>
    </form>
  </div>
</div>

<script>
function addTarefa(nome="", pontos="10", freq="SEMANAL") {
  const wrap = document.createElement('div');
  wrap.className = 'row g-2 align-items-end mb-2';
  wrap.innerHTML = `
    <div class="col-md-6">
      <label class="form-label">Nome da tarefa</label>
      <input name="tTitulo" class="form-control" required value="${nome}">
    </div>
    <div class="col-md-3">
      <label class="form-label">Pontos</label>
      <input name="tPontos" type="number" class="form-control" min="1" value="${pontos}">
    </div>
    <div class="col-md-2">
      <label class="form-label">Frequência</label>
      <select name="tFreq" class="form-control">
        <option value="DIARIA" ${freq==='DIARIA'?'selected':''}>Diária</option>
        <option value="SEMANAL" ${freq==='SEMANAL'?'selected':''}>Semanal</option>
      </select>
    </div>
    <div class="col-md-1">
      <button type="button" class="btn btn-outline-light" onclick="this.closest('.row').remove()">X</button>
    </div>
  `;
  document.getElementById('tarefasContainer').appendChild(wrap);
}
// começa com 2 linhas por padrão
addTarefa();
addTarefa();
</script>
</body>
